<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.handler.chrome"
       name="Chrome Handler"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.pil" version="1.1.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
	  <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Web browser</summary>
    <summary lang="ja">ウェブブラウザ</summary>
    <description lang="en">Web browsing through Google Chrome and Selenium</description>
    <description lang="ja">Google ChromeとSeleniumによるウェブブラウジング</description>
    <disclaimer lang="en">Tested on macOS</disclaimer>
    <disclaimer lang="ja">macOSでの動作を確認</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
